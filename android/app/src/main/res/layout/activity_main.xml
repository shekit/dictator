<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dictator"
            android:textColor="#FFFFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice-to-text dictation keyboard"
            android:textColor="#FF8E8E93"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Setup section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Enable the Dictator keyboard in system settings"
            android:textColor="#FFCCCCCC"
            android:textSize="15sp"
            android:layout_marginTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enableKeyboardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Input Settings"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Switch to the Dictator keyboard in any text field"
            android:textColor="#FFCCCCCC"
            android:textSize="15sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Hold the mic button and start speaking"
            android:textColor="#FFCCCCCC"
            android:textSize="15sp"
            android:layout_marginTop="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF3A3A3C"
            android:layout_marginTop="32dp" />

        <!-- Settings section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Recording mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recording mode"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recordingModeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold mic button to record, release to stop"
                    android:textColor="#FF8E8E93"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/tapModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF3A3A3C"
            android:layout_marginTop="12dp" />

        <!-- Speech Engine section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Engine"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/sttEngineGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/radioSpeechRecognizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speech Recognizer (default)"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:buttonTint="#FF3478F6"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uses Android\u2019s built-in speech recognition. Fast, accurate, may need internet on older devices."
                android:textColor="#FF8E8E93"
                android:textSize="13sp"
                android:paddingStart="40dp"
                android:paddingBottom="8dp" />

            <RadioButton
                android:id="@+id/radioWhisper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whisper (offline)"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:buttonTint="#FF3478F6"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On-device Whisper model. Works in airplane mode. Requires one-time model download."
                android:textColor="#FF8E8E93"
                android:textSize="13sp"
                android:paddingStart="40dp"
                android:paddingBottom="8dp" />

        </RadioGroup>

        <!-- Whisper model section (shown when Whisper selected) -->
        <LinearLayout
            android:id="@+id/whisperModelSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF2C2C2E"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whisper Model"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not downloaded"
                android:textColor="#FF8E8E93"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <ProgressBar
                android:id="@+id/modelProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progressTint="#FF3478F6"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modelActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Model (~75 MB)"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
